#include <iostream>

using namespace std;

void elementBiggerThanThePrevious(int arr[], int lenght)
{
    cout << "Biggest element " << arr[lenght] << endl;
    cout << "Second to biggest element " << arr[lenght - 1] << endl;
    
    if(lenght <= 0)
    {
        cout << boolalpha << true << endl;
    }
    
    if(arr[lenght] >= arr[lenght - 1])
    {
        elementBiggerThanThePrevious(arr, lenght - 1);
    }
    else
    {
        cout << boolalpha << false << endl;
    }
}

int main()
{
    int arr[] = {1, 3, 4};
    elementBiggerThanThePrevious(arr, 2);
    
    return 0;
}
