#include <iostream>

using namespace std;

bool isPalindrome(char arr[], int lenght = 3, int index = 0)
{
    lenght -= 1;
    
    if(index >= lenght)
    {
        return true;
    }
    
    if(arr[index] == arr[lenght])
    {
        isPalindrome(arr, lenght, index + 1);
    }
    
    return false;
    
}

int main()
{
    char arr[] = "sus";
    
    cout << boolalpha << isPalindrome(arr);
    
    return 0;
}
