}

char printTriangleEnding(int n)
{
    if(n == 0)
    {
        return 0;
    }
    
    
    printTriangleStarting(n - 1)
}

char printTriangleStarting(int n, int currentN = 0)
{
    if(currentN == n)
    {
        printTriangleEnding(n);
    }
    
    
    printTriangleStarting(n, currentN + 1)
}

int main()
{
    cout << "Enter n" << endl;
    int n;
    
    do
    {
        cin >> n;
    }
    while(n <= 0);
    
    cout << printTriangle(n);
    
    return 0;
}
