void readStudentFromFile(int numberOfStudents)
{
    std::ifstream ifs("Students.csv");

    if (!ifs.is_open())
    {
        std::cout << "Error";
        return;
    }

    char firstName[17];
    char secondName[17];
    int fcNumber;
    double averageGrades;
    int color;

    do
    {
        std::cout << "Our student is: " << std::endl;

        ifs >> firstName;
        std::cout << "First name: " << firstName << std::endl;
        ifs >> secondName;
        std::cout << "Second name: " << secondName << std::endl;
        ifs >> fcNumber;
        std::cout << "Faculty number: " << fcNumber << std::endl;
        ifs >> averageGrades;
        std::cout << "Average grade: " << averageGrades << std::endl;
        ifs >> color;
        std::cout << "Hair color: " << color << std::endl;
    } while (!ifs.eof());

    ifs.close();
}

void writeStudentToFile(Student student[1024], int numberOfStudents)
{
    std::ofstream ofs("Students.csv");

    if (!ofs.is_open())
    {
        std::cout << "Error";
        return;
    }

    for (int i = 0; i < numberOfStudents; i++)
    {
        ofs << student[i].firstName;
        ofs << ", " ;
        ofs << student[i].secondName;
        ofs << ", ";
        ofs << student[i].fcNumber;
        ofs << ", ";
        ofs << student[i].averageGrades;
        ofs << ", ";
        ofs << student[i].color;
        ofs << std::endl;
    }

    ofs.close();
}

