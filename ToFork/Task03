#include <iostream>
using namespace std;

void transponseMatrix(int col, int row, int* matrix[10])
{
    int** transponsedMatrix = new int* [50];

    for (int i = 0; i < row; i++)
    {
        transponsedMatrix[i] = new int[col];
    }

    for (int i = 0; i < row; i++)
    {
        for (int j = 0; j < col; j++)
        {
            transponsedMatrix[j][i] = matrix[i][j];
        }
    }

    for (int i = 0; i < col; i++)
    {
        for (int j = 0; j < row; j++)
        {
            cout << transponsedMatrix[i][j];
        }
        cout << endl;
    }
}

int main()
{
    cout << "Enter rows and cols" << endl;
    int row, col;
    cin >> row;
    cin >> col;

    int** matrix = new int*[10];

    for (int i = 0; i < row; i++)
    {
        matrix[i] = new int[col];
    }

    cout << "Enter the elements" << endl;
    for (int i = 0; i < row; i++)
    {
        for (int j = 0; j < col; j++)
        {
            cin >> matrix[i][j];
        }
    }

    cout << "This is your matrix" << endl;
    for (int i = 0; i < row; i++)
    {
        for (int j = 0; j < col; j++)
        {
            cout << matrix[i][j];
        }
        cout << endl;
    }
    cout << endl;

    transponseMatrix(col, row, matrix);
}
