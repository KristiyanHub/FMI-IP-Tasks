#include <iostream>
#include <fstream>
#include <string>

using std::cin;
using std::cout;
using std::fstream;
using std::ifstream;
using std::ofstream;
using std::endl;

void outputResult(fstream& file)
{
	std::string sum;
	std::string product;

	file.open("result.txt");

	getline(file, sum);
	getline(file, product);
	cout << sum << endl;
	cout << product << endl;

	cout << "The sum minus the product: ";

}

void inputSumAndProductInFile(fstream& file)
{
	int a, b, c;
	cout << "Enter three numbers: ";
	cin >> a >> b >> c;

	int sum, product;


	sum = a + b + c;
	file >> sum;

	product = a * b * c;
	file >> product;

	outputResult(file);
}

int main()
{
	fstream file("result.txt");

	if (!file.is_open())
	{
		cout << "File is not open";
	}

	inputSumAndProductInFile(file);

	file.close();
}
