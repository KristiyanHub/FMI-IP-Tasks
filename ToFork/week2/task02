#include <iostream>
#include <fstream>
#include <string>

using std::cin;
using std::cout;
using std::fstream;
using std::ifstream;
using std::ofstream;
using std::endl;

void lengthOfFile(fstream& file)
{
    std::string line;
    int numberOfSymbols = 0;

    while (getline(file, line))
    {
        numberOfSymbols += line.length();;
    }

    cout << numberOfSymbols;
}

int main()
{
    fstream file("Myfile.txt");

    if (!file.is_open())
    {
        cout << "Error" << endl;
        return -1;
    }

    lengthOfFile(file);

    file.close();
}
